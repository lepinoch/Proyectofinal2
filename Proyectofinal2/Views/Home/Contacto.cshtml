@{
    ViewBag.Title = "Acerca";
}

<h2>Acerca</h2>
<div id="contact-page" class="container">
    <div class="bg">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="title text-center">Ubicacion <strong>Geográfica</strong></h2>

                <div class="contact-info" align="center">
                    <script type="text/javascript"
                            src="http://www.webestools.com/google_map_gen.js?lati=-36.824816&long=-73.052363&zoom=17&width=500%&height=500%&mapType=normal&map_btn_normal=yes&map_btn_satelite=yes&map_btn_mixte=yes&map_small=yes&marqueur=yes&info_bulle="></script><br />

                </div>
            </div>
            <div class="row">
                <div class="col-sm-8">
                    <div class="contact-form">
                        <h2 class="title text-center">Envianos un mensaje</h2>
                        <div class="status alert alert-success" style="display: none"></div>



                        @*<form id="main-contact-form" class="contact-form row" name="contact-form" method="post" action="">*@


@using (Html.BeginForm("Contacto", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


                            <div class="form-group col-md-6">
                                <input type="text" name="Nombre" id="Nombre" class="form-control" required placeholder="Nombre">
                            </div>
                            <div class="form-group col-md-6">
                                <input type="email" name="Email" id="Email" class="form-control" required placeholder="Email">
                            </div>
                            <div class="form-group col-md-12">
                                <input type="text" name="Asunto" id="Asunto" class="form-control" required placeholder="Asunto">
                            </div>
                            <div class="form-group col-md-12">
                                <textarea name="Mensaje" id="Mensaje" required class="form-control" rows="8" placeholder="Escribe tu mensaje aquí"></textarea>
                            </div>
                            <div class="form-group col-md-12">
                                <input type="submit" name="submit" class="btn btn-primary pull-right" value="Enviar">
                            </div>
                      
                        
                        
}         
                          @*</form>*@


                    </div>
                </div>


                <div class="col-sm-4">
                    <div class="contact-info">
                        <h2 class="title text-center">Información de contacto</h2>
                        <address>
                            <p>Menajes Maipú</p>
                            <p>Dirección: Maipú 601 Concepción</p>
                            <p>Código Postal: 4030497</p>
                            <p>Chile</p>
                        </address>

                    </div>
                </div>
            </div>
        </div>
    </div><!--/#contact-page-->
</div>